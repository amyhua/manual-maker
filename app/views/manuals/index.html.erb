<div class="create-manual">
	<h3><%= link_to 'Create a New Manual', new_manual_path %></h3>
</div>

<h2>Your Manuals</h2>
<div class="manuals">
	<ul>
		<% @manuals.each do |manual| %>
		<li><h3><%= link_to manual.name, manual %></h3></li>
		<ul>
			<li><%= link_to 'edit', edit_manual_path(manual) %></li>
			<li><%= link_to 'delete', manual, method: :delete, confirm: 'Are you sure you want to delete this manual?' %></li>
		</ul>
		<% end %>		
	</ul>
</div>
 
